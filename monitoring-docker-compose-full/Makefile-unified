nginx: setup-networks
	$(COMPOSE_CMD) --profile nginx up -d
	@echo "âœ… Nginx monitoring started"

.PHONY: elasticsearch
elasticsearch: setup-networks
	$(COMPOSE_CMD) --profile elasticsearch up -d
	@echo "âœ… Elasticsearch monitoring started"

# All services
.PHONY: all
all: setup-networks
	$(COMPOSE_CMD) --profile all up -d
	@echo "âœ… ALL services monitoring started!"
	@echo ""
	@echo "ðŸ“Š Monitoring Coverage:"
	@echo "  â€¢ System: Node Exporter + cAdvisor"
	@echo "  â€¢ Redis: All modes (Single/Replication/Sentinel/Cluster)"
	@echo "  â€¢ MySQL: All modes (Single/Master-Slave)"
	@echo "  â€¢ MongoDB: All modes (Single/Replica/Sharded)"
	@echo "  â€¢ Message Queues: Kafka + RabbitMQ"
	@echo "  â€¢ Web Servers: Nginx"
	@echo "  â€¢ Search: Elasticsearch"

# Testing
.PHONY: test
test:
	@echo "ðŸ§ª Running comprehensive unified monitoring test suite..."
	./test-unified-monitoring.sh

.PHONY: test-integration
test-integration:
	@echo "ðŸ§ª Testing stack integration..."
	@./test-unified-monitoring.sh | grep -A 20 "Testing Stack Integrations"

.PHONY: health
health:
	@echo "ðŸ¥ Health Check - Unified Monitoring"
	@echo "===================================="
	@$(COMPOSE_CMD) ps --format "table {{.Name}}\t{{.Status}}\t{{.Ports}}" 2>/dev/null || $(COMPOSE_CMD) ps
	@echo ""
	@echo "ðŸ” Service Health:"
	@curl -s http://localhost:9090/-/healthy > /dev/null && echo "âœ… Prometheus" || echo "âŒ Prometheus"
	@curl -s http://localhost:3000/api/health > /dev/null && echo "âœ… Grafana" || echo "âŒ Grafana"
	@curl -s http://localhost:9093/api/v1/status > /dev/null && echo "âœ… AlertManager" || echo "âŒ AlertManager"
	@curl -s http://localhost:9100/metrics > /dev/null && echo "âœ… Node Exporter" || echo "âŒ Node Exporter"
	@curl -s http://localhost:8080/metrics > /dev/null && echo "âœ… cAdvisor" || echo "âŒ cAdvisor"

.PHONY: targets
targets:
	@echo "ðŸŽ¯ Prometheus Targets Status"
	@echo "============================"
	@curl -s http://localhost:9090/api/v1/targets | jq -r '.data.activeTargets[] | "\(.labels.job): \(.health) (\(.lastError // "OK"))"' 2>/dev/null || echo "Prometheus not accessible"

# Debug commands
.PHONY: debug-redis
debug-redis:
	@echo "ðŸ” Redis Monitoring Debug"
	@echo "========================="
	@echo "Redis Exporters Status:"
	@$(COMPOSE_CMD) ps | grep redis-exporter || echo "No Redis exporters running"
	@echo ""
	@echo "Testing Redis connectivity:"
	@for port in 9121 9122 9123 9124; do \
		curl -s http://localhost:$$port/metrics > /dev/null && echo "âœ… Port $$port: UP" || echo "âŒ Port $$port: DOWN"; \
	done

.PHONY: debug-mysql
debug-mysql:
	@echo "ðŸ” MySQL Monitoring Debug"
	@echo "========================="
	@echo "MySQL Exporters Status:"
	@$(COMPOSE_CMD) ps | grep mysql-exporter || echo "No MySQL exporters running"
	@echo ""
	@echo "Testing MySQL connectivity:"
	@for port in 9104 9105 9106; do \
		curl -s http://localhost:$$port/metrics > /dev/null && echo "âœ… Port $$port: UP" || echo "âŒ Port $$port: DOWN"; \
	done

.PHONY: debug-mongo
debug-mongo:
	@echo "ðŸ” MongoDB Monitoring Debug"
	@echo "==========================="
	@echo "MongoDB Exporters Status:"
	@$(COMPOSE_CMD) ps | grep mongodb-exporter || echo "No MongoDB exporters running"
	@echo ""
	@echo "Testing MongoDB connectivity:"
	@for port in 9216 9217 9218; do \
		curl -s http://localhost:$$port/metrics > /dev/null && echo "âœ… Port $$port: UP" || echo "âŒ Port $$port: DOWN"; \
	done

# Shell access
.PHONY: shell-prometheus
shell-prometheus:
	$(COMPOSE_CMD) exec prometheus sh

.PHONY: shell-grafana
shell-grafana:
	$(COMPOSE_CMD) exec grafana bash

# Configuration management
.PHONY: config-check
config-check:
	@echo "ðŸ”§ Configuration Validation"
	@echo "==========================="
	@$(COMPOSE_CMD) config > /dev/null && echo "âœ… Docker Compose config valid" || echo "âŒ Docker Compose config invalid"
	@promtool check config prometheus/prometheus-unified.yml 2>/dev/null && echo "âœ… Prometheus config valid" || echo "âŒ Prometheus config invalid"

.PHONY: reload-prometheus
reload-prometheus:
	@echo "ðŸ”„ Reloading Prometheus configuration..."
	@curl -s -X POST http://localhost:9090/-/reload && echo "âœ… Prometheus config reloaded" || echo "âŒ Failed to reload Prometheus"

# Quick stack starts (requires other stacks to be available)
.PHONY: start-redis-stack
start-redis-stack:
	@echo "ðŸš€ Starting Redis stack for monitoring..."
	@cd ../redis-docker-compose-full && docker compose --profile single up -d && cd -
	@$(MAKE) redis-single

.PHONY: start-mysql-stack
start-mysql-stack:
	@echo "ðŸš€ Starting MySQL stack for monitoring..."
	@cd ../mysql-docker-compose-full && docker compose --profile single up -d && cd -
	@$(MAKE) mysql-single

.PHONY: start-mongo-stack
start-mongo-stack:
	@echo "ðŸš€ Starting MongoDB stack for monitoring..."
	@cd ../mongo-docker-compose-full && docker compose --profile single up -d && cd -
	@$(MAKE) mongo-single

# Demo mode - start everything
.PHONY: demo
demo: setup-networks
	@echo "ðŸŽ¬ Starting DEMO mode - Full Stack Monitoring"
	@echo "=============================================="
	@echo ""
	@echo "Starting target services..."
	@cd ../redis-docker-compose-full && docker compose --profile single up -d > /dev/null 2>&1 && echo "âœ… Redis started" || echo "âš ï¸  Redis stack not found"
	@cd ../mysql-docker-compose-full && docker compose --profile single up -d > /dev/null 2>&1 && echo "âœ… MySQL started" || echo "âš ï¸  MySQL stack not found"
	@cd ../mongo-docker-compose-full && docker compose --profile single up -d > /dev/null 2>&1 && echo "âœ… MongoDB started" || echo "âš ï¸  MongoDB stack not found"
	@echo ""
	@echo "Starting unified monitoring..."
	@$(COMPOSE_CMD) --profile all up -d
	@echo ""
	@echo "ðŸŽ‰ DEMO mode ready!"
	@echo ""
	@echo "ðŸ“Š Access your monitoring:"
	@echo "  Prometheus:   http://localhost:9090"
	@echo "  Grafana:      http://localhost:3000 (admin/admin123)"
	@echo "  AlertManager: http://localhost:9093"
	@echo "  cAdvisor:     http://localhost:8080"
	@echo ""
	@echo "ðŸ§ª Run tests: make test"

# Spring Boot specific profiles
.PHONY: spring-boot-demo
spring-boot-demo: setup-networks
	$(COMPOSE_CMD) --profile spring-boot-demo up -d
	@echo "âœ… Spring Boot demo applications started"
	@echo "ðŸ”— Demo App 1: http://localhost:8081"
	@echo "ðŸ”— Demo App 2: http://localhost:8082"
	@echo "ðŸ”— Actuator (App 1): http://localhost:8081/actuator"
	@echo "ðŸ”— Metrics (App 1): http://localhost:8081/actuator/prometheus"

.PHONY: spring-boot-admin
spring-boot-admin: setup-networks
	$(COMPOSE_CMD) --profile spring-boot-admin up -d
	@echo "âœ… Spring Boot Admin server started"
	@echo "ðŸ”— Spring Boot Admin: http://localhost:8080"

# Spring Boot testing
.PHONY: test-spring-boot
test-spring-boot:
	@echo "ðŸ§ª Testing Spring Boot monitoring..."
	@echo "Checking demo applications..."
	@curl -s http://localhost:8081/actuator/health > /dev/null && echo "âœ… Spring App 1 healthy" || echo "âŒ Spring App 1 unhealthy"
	@curl -s http://localhost:8082/actuator/health > /dev/null && echo "âœ… Spring App 2 healthy" || echo "âŒ Spring App 2 unhealthy"
	@echo "Checking Prometheus metrics..."
	@curl -s http://localhost:8081/actuator/prometheus | grep -q "jvm_memory" && echo "âœ… JVM metrics available" || echo "âŒ JVM metrics missing"
	@curl -s http://localhost:8081/actuator/prometheus | grep -q "http_server_requests" && echo "âœ… HTTP metrics available" || echo "âŒ HTTP metrics missing"

# Clean demo
.PHONY: clean-demo
clean-demo:
	@echo "ðŸ§¹ Cleaning up DEMO mode..."
	@$(COMPOSE_CMD) down -v
	@cd ../redis-docker-compose-full && docker compose down > /dev/null 2>&1 || true
	@cd ../mysql-docker-compose-full && docker compose down > /dev/null 2>&1 || true
	@cd ../mongo-docker-compose-full && docker compose down > /dev/null 2>&1 || true
	@echo "âœ… DEMO cleanup complete"